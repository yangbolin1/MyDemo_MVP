<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tv.app.widget.focus.FocusRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_vgallery_item0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    >

        <com.yunos.tv.app.widget.focus.FocusImageView
            android:id="@+id/id_iv_item0"
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:focusable="true"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            />

        <com.yunos.tv.app.widget.focus.FocusImageView
            android:id="@+id/id_iv_item1"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:focusable="true"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/id_iv_item0"
            />

        <com.yunos.tv.app.widget.focus.FocusImageView
            android:id="@+id/id_iv_item2"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:focusable="true"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/id_iv_item0"
            android:layout_below="@id/id_iv_item1"
            />
    </com.yunos.tv.app.widget.focus.FocusRelativeLayout>


