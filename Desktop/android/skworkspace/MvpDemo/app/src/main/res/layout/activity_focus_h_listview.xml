<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tv.app.widget.focus.FocusPositionManager
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:id="@+id/id_focus_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="1080dp"
        android:layout_height="720dp"
        android:orientation="vertical"
        >
        <com.yunos.tv.app.widget.focus.FocusTextView
        android:id="@+id/id_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test1_txt_0"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        />
        <com.yunos.tv.app.widget.focus.FocusTextView
            android:id="@+id/id_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test1_txt_0"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            />
        <com.yunos.tv.app.widget.focus.FocusHListView
            android:id="@+id/id_h_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.yunos.tv.app.widget.focus.FocusHListView>


    </LinearLayout>
</com.yunos.tv.app.widget.focus.FocusPositionManager>