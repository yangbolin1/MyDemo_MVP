<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ccdt.tv.mvpdemo.com.ccdt.app.tv.mvpdemo.view.activity.MainActivity">

    <TextView
        android:id="@+id/id_tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    <TextView
        android:id="@+id/id_tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="@string/btn_focuse_demo"
        android:id="@+id/id_btn_test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="@string/btn_focuse_lv"
        android:id="@+id/id_btn_test4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="@string/btn_focuse_h_lv"
        android:id="@+id/id_btn_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="@string/btn_focuse_gridview"
        android:id="@+id/id_btn_test3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="@string/btn_focuse_complex"
        android:id="@+id/id_btn_test5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="@string/btn_focuse_vgallery"
        android:id="@+id/id_btn_test6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="@string/btn_focuse_complex_list"
        android:id="@+id/id_btn_test7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="@string/mvp_simple1"
        android:id="@+id/id_btn_test8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.ccdt.app.tv.mvpdemo.view.widget.view.ButtonEx
        android:text="菜单listview交互"
        android:id="@+id/id_btn_test9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
